<p id="notice"><%= notice %></p>

<h1>
  <%= @quiz.name %>
</h1>

<table>
  <thead>
    <tr>
      <th>#</th>
      <th>Question</th>
      <th colspan="1"></th>
    </tr>
  </thead>

  <tbody>
    <% @questions.each_with_index do |question, index| %>
      <tr>
        <td><%= (index + 1) %></td>
        <td><%= question.question_asked %></td>
        <td><%= link_to 'See Question', question %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<p>
  <strong>Start the Quiz!:</strong>
  <%= @questions[0].question_asked %>
</p>


<%= link_to 'Edit', edit_quiz_path(@quiz) %> |
<%= link_to 'Back', quizzes_path %>
